.header{
  background-image: url("<%= asset_path('背景.png') %>");
  height: 200px;
  width: 810px;
  text-align: center;
  display: flex;
  justify-content: space-around;
  margin: 0 auto;
}

.title{
  color: red;
  font-size: 50px;
  padding: 20px;
  font-weight: bold;
}

.post{
  text-decoration: none;
  height: 80px;
  width: 200px;
  font-size: 40px;
  margin-top: 90px;
  border: 1px;
  background-color: white;
  border-style: solid;
  color: black;
  padding-top: 15px;
  font-weight: bold;
}

.main{
  background-color: gray;
  height: 100%;
  width: 810px;
  display: flex;
  margin: 0 auto;
}

.memo{
  background-color: white;
  height: 200px;
  width: 500px;
  border: 10px ;
  border-style: solid;
  border-color: gray;
  padding: 20px;
  font-size: 22px;
}

.button{
  display: flex;
  justify-content: center;
}

.edit{
  width: 150px;
  text-decoration: none;
  background-color: blue;
  color: white;
  text-align: center;
  border: 1px;
  border-style: solid;
  border-color: black;
  font-weight: bold;
  margin: 10px 20px 0 0;
}

.delete{
  width: 150px;
  text-decoration: none;
  background-color: red;
  color: white;
  text-align: center;
  border: 1px;
  border-style: solid;
  border-color: black;
  font-weight: bold;
  margin-top: 10px;
}

.food{
  background-color: aqua;
  height: 240px;
  width: 240px;
  border: 10px;
  border-style: solid;
  border-color: gray;
  text-align: center;
}

.foods{
  height: 220px;
  width: 240px;
}

.footer{
  background-image: url("<%= asset_path('背景.png') %>");
  height: 100px;
  width: 810px;
  margin: 0 auto;
}